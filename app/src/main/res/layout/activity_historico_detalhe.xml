<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/historico_detalhe_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar_historico_detalhe"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primaryColor"
            android:elevation="4dp"
            app:title="@string/name_activity_historico_detalhe"
            app:titleTextColor="@color/primaryTextColor"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroolView_historico_detalhe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/card_checkIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/Titulo_checkIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Check-In "
                        android:textSize="24sp"
                        android:padding="16dp"
                        android:background="@color/secondaryColor"
                        android:textColor="@android:color/white"
                        />

                    <TextView
                        android:id="@+id/data_checkIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Titulo_checkIn"
                        android:text="Data Check-In: "
                        android:padding="16dp"
                        />

                    <TextView
                        android:id="@+id/value_data_checkIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Titulo_checkIn"
                        android:layout_toRightOf="@+id/data_checkIn"
                        android:layout_alignParentRight="true"
                        android:text="21/01/2019"
                        android:textAlignment="center"
                        android:padding="16dp"
                        />

                    <View
                        android:id="@+id/line_2"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/data_checkIn"
                        android:background="#c0c0c0"
                        android:layout_marginHorizontal="14dp"/>

                    <TextView
                        android:id="@+id/hora_checkIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/data_checkIn"
                        android:text="Hora Check-In: "
                        android:padding="16dp"
                        />

                    <TextView
                        android:id="@+id/value_hora_checkIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/data_checkIn"
                        android:layout_toRightOf="@+id/hora_checkIn"
                        android:layout_alignParentRight="true"
                        android:text="21:32:21"
                        android:textAlignment="center"
                        android:padding="16dp"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_checkIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/Titulo_checkIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Check-In "
                        android:textSize="24sp"
                        android:padding="16dp"
                        android:background="@color/secondaryColor"
                        android:textColor="@android:color/white"
                        />

                    <TextView
                        android:id="@+id/data_checkIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Titulo_checkIn"
                        android:text="Data Check-In: "
                        android:padding="16dp"
                        />

                    <TextView
                        android:id="@+id/value_data_checkIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Titulo_checkIn"
                        android:layout_toRightOf="@+id/data_checkIn"
                        android:layout_alignParentRight="true"
                        android:text="21/01/2019"
                        android:textAlignment="center"
                        android:padding="16dp"
                        />

                    <View
                        android:id="@+id/line_2"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/data_checkIn"
                        android:background="#c0c0c0"
                        android:layout_marginHorizontal="14dp"/>

                    <TextView
                        android:id="@+id/hora_checkIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/data_checkIn"
                        android:text="Hora Check-In: "
                        android:padding="16dp"
                        />

                    <TextView
                        android:id="@+id/value_hora_checkIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/data_checkIn"
                        android:layout_toRightOf="@+id/hora_checkIn"
                        android:layout_alignParentRight="true"
                        android:text="21:32:21"
                        android:textAlignment="center"
                        android:padding="16dp"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_checkOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_checkIn"
                android:layout_margin="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/Titulo_checkOut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Check-Out "
                        android:textSize="24sp"
                        android:padding="16dp"
                        android:background="@color/secondaryColor"
                        android:textColor="@android:color/white"
                        />

                    <TextView
                        android:id="@+id/data_checkOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Titulo_checkOut"
                        android:text="Data Check-In: "
                        android:padding="16dp"
                        />

                    <TextView
                        android:id="@+id/value_data_checkOut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Titulo_checkOut"
                        android:layout_toRightOf="@+id/data_checkOut"
                        android:layout_alignParentRight="true"
                        android:text="04/04/2019"
                        android:textAlignment="center"
                        android:padding="16dp"
                        />

                    <View
                        android:id="@+id/line_2"
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/data_checkOut"
                        android:background="#c0c0c0"
                        android:layout_marginHorizontal="14dp"/>

                    <TextView
                        android:id="@+id/hora_checkOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/data_checkOut"
                        android:text="Hora Check-In: "
                        android:padding="16dp"
                        />

                    <TextView
                        android:id="@+id/value_hora_checkOut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/data_checkOut"
                        android:layout_toRightOf="@+id/hora_checkOut"
                        android:layout_alignParentRight="true"
                        android:text="09:32:21"
                        android:textAlignment="center"
                        android:padding="16dp"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </ScrollView>

</android.support.v4.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/hospital_list_item_photo"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/medium_margin"
            android:contentDescription="@string/image_view_hospital_list_item_thumb_description"
            android:src="@drawable/hospital_green" />

        <TextView
            android:id="@+id/hospital_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/hospital_name_placeholder"
            android:layout_toEndOf="@id/hospital_list_item_photo"
            android:layout_alignTop="@id/hospital_list_item_photo"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/hospital_list_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hospital_list_item_type"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:layout_toEndOf="@id/hospital_list_item_photo"
            android:layout_below="@id/hospital_list_item_name"
            android:layout_alignStart="@id/hospital_list_item_name"
            android:textSize="16sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>




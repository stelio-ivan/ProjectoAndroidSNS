<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="8dp">

        <TextView
            android:id="@+id/hospital_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/hospital_name_placeholder"
            android:layout_marginLeft="8dp" />

        <TextView
        android:id="@+id/hospital_list_item_titleDistancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Distancia: "
        android:layout_below="@id/hospital_list_item_name"
        android:layout_alignStart="@id/hospital_list_item_name" />

        <TextView
            android:id="@+id/hospital_list_item_distancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21 Km"
            android:layout_below="@id/hospital_list_item_name"
            android:layout_toRightOf="@+id/hospital_list_item_titleDistancia"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/hospital_list_item_titleTempoMedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Tempo de espera: "
            android:layout_below="@id/hospital_list_item_distancia"
            android:layout_alignStart="@id/hospital_list_item_name" />

        <TextView
            android:id="@+id/hospital_list_item_tempoMedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/hospital_list_item_distancia"
            android:layout_toRightOf="@+id/hospital_list_item_titleTempoMedio"
            android:textSize="20sp" />

        <!--- ***************************************************************** -->
        <View
            android:id="@+id/line_0"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_height"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/hospital_list_item_tempoMedio"
            android:layout_marginTop="8dp"/>
        <!--- ***************************************************************** -->

    </RelativeLayout>
</android.support.v7.widget.CardView>




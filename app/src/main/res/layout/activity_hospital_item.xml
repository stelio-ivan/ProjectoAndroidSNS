<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/hospital_list_item_photo"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/medium_margin"
            android:contentDescription="@string/image_view_hospital_list_item_thumb_description"
            android:src="@drawable/hospital_icon_1" />

        <TextView
            android:id="@+id/hospital_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/hospital_name_placeholder"
            android:layout_toEndOf="@id/hospital_list_item_photo"
            android:layout_alignTop="@id/hospital_list_item_photo"
            android:layout_marginLeft="8dp"/>

        <TextView
        android:id="@+id/hospital_list_item_titleDistancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Distancia: "
        android:layout_toEndOf="@id/hospital_list_item_photo"
        android:layout_below="@id/hospital_list_item_name"
        android:layout_alignStart="@id/hospital_list_item_name" />

        <TextView
            android:id="@+id/hospital_list_item_distancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21 Km"
            android:layout_below="@id/hospital_list_item_name"
            android:layout_toRightOf="@+id/hospital_list_item_titleDistancia"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/hospital_list_item_titleTempoMedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Tempo de espera: "
            android:layout_toEndOf="@id/hospital_list_item_photo"
            android:layout_below="@id/hospital_list_item_distancia"
            android:layout_alignStart="@id/hospital_list_item_name" />

        <TextView
            android:id="@+id/hospital_list_item_tempoMedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/hospital_list_item_distancia"
            android:layout_toRightOf="@+id/hospital_list_item_titleTempoMedio"
            android:textSize="20sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>



